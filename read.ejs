<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb=10">
            <a class="text-blue-500" href="/">Home</a>
        </div>

        <h1 class="text-3xl mb-5 ml-20">All User</h1>
        <div class="users flex gap-8 flex-wrap justify-center">
        
         <% if(users.length > 0 ){ %>
            <%  users.forEach((user)=>{ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-red-500">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>">
                    </div>
                    <h3 class="text-xl mt-4"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 t-10">
                        <a class="text-zinc-200"href='/edit/<%= user._id %>'>Edit User</a>
                        <a class="text-red-500"href='/delete/<%= user._id %>'>delete User</a>
                    </div>
                </div>
              <% }) %>
        <% } else { %>
            <h3>No users..</h3>
        <% } %>
        </div>
    </div>
</body>
</html>